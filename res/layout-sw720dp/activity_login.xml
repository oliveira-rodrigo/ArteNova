<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040"
    tools:context=".LoginActivity" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/login_form"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="30dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageViewArteNova"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:contentDescription="@string/logo_arte_nova"
                android:src="@drawable/logo_arte_nova" />

            <ImageView
                android:id="@+id/imageViewUnue"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="0dp"
                android:contentDescription="@string/logo_unue"
                android:src="@drawable/logo_unue" />

            <ImageView
                android:id="@+id/imageViewSteel"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="41dp"
                android:layout_marginTop="0dp"
                android:contentDescription="@string/logo_steel"
                android:src="@drawable/logo_steel" />
        </LinearLayout>

        <TextView
            android:id="@+id/imageViewLoginBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="85dp"
            android:background="@drawable/login_form_icos" />

        <ImageView
            android:id="@+id/imageViewLogin"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="100dp"
            android:contentDescription="@string/img_login"
            android:src="@drawable/ico_user" />

        <EditText
            android:id="@+id/editTextLogin"
            android:layout_width="326dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="85dp"
            android:background="@drawable/login_form_edit_text"
            android:ems="10"
            android:hint="@string/hint_login" >
        </EditText>

        <TextView
            android:id="@+id/imageViewSenhaBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="145dp"
            android:background="@drawable/login_form_icos" />

        <ImageView
            android:id="@+id/imageViewSenha"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="160dp"
            android:contentDescription="@string/img_senha"
            android:src="@drawable/ico_password" />

        <EditText
            android:id="@+id/editTextSenha"
            android:layout_width="326dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="145dp"
            android:background="@drawable/login_form_edit_text"
            android:ems="10"
            android:hint="@string/hint_senha"
            android:inputType="textPassword" >
        </EditText>

        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="213dp"
            android:background="@drawable/login_form_button"
            android:onClick="login"
            android:text="@string/entrar"
            android:textColor="#FFFFFF" />
    </FrameLayout>

</RelativeLayout>