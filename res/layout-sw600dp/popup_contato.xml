<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popupContato"
    android:layout_width="600dp"
    android:layout_height="600dp"
    android:background="#FFF"
    android:orientation="vertical"
    android:scrollbars="vertical" >

    <TextView
        android:id="@+id/txtViewArteNova"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:text="arte nova" />

    <TextView
        android:id="@+id/txtViewUnue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="80sp"
        android:layout_marginTop="10sp"
        android:text="unue" />

    <TextView
        android:id="@+id/txtViewSteel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="150sp"
        android:layout_marginTop="10sp"
        android:text="steel" />

    <Button
        android:id="@+id/btn_close_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="0sp"
        android:layout_marginTop="0sp"
        android:text="Close" />

    <EditText
        android:id="@+id/editTextNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="50sp"
        android:ems="8"
        android:hint="NOME"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="90sp"
        android:ems="8"
        android:hint="E-MAIL"
        android:inputType="textEmailAddress" >
    </EditText>

    <EditText
        android:id="@+id/editTextAssunto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="130sp"
        android:ems="8"
        android:hint="ASSUNTO"
        android:inputType="textEmailSubject" >
    </EditText>

    <EditText
        android:id="@+id/editTextMensagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="170sp"
        android:ems="8"
        android:hint="MENSAGEM"
        android:inputType="textMultiLine"
        android:maxHeight="150sp" >
    </EditText>

    <Button
        android:id="@+id/btn_enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="10sp"
        android:onClick="enviarEmail"
        android:text="Enviar" />

</RelativeLayout>